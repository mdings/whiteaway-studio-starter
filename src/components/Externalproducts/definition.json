  "category": "Components",
  "description": "Creates slices of products coming from Shopify.",
  "variables": {
    "sortBy": {
      "group": "style",
      "displayName": "Default sort order",
      "type": "Text",
      "validations": {
        "in": [
          { "value": "Popularity" },
          { "value": "Cheapest" },
          { "value": "Newest" },
          { "value": "Oldest" }
        ]
      }
    },
    "max": {
      "group": "style",
      "displayName": "Max number of items to display",
      "type": "Text",
      "defaultValue": "3",
      "validations": {
        "in": [
          { "value": "1" },
          { "value": "2" },
          { "value": "3" },
          { "value": "6" },
          { "value": "12" },
          { "value": "unlimited" }
        ]
      }
    }
  },
